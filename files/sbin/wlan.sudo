#!/bin/sh

cp /etc/udev/rules.d/70-persistent-net.rules /tmp/wlan.txt
sed -i '/wlan/d' /tmp/wlan.txt
cp /tmp/wlan.txt /etc/udev/rules.d/70-persistent-net.rules
echo .
echo Bitte Stick anstecken
echo .
read nix
sed -i /wpa_passphrase/d /etc/hostapd/hostapd.conf
echo -n 'wpa_passphrase=' >> /etc/hostapd/hostapd.conf
pwgen -A0 6 1 >> /etc/hostapd/hostapd.conf
sudo /etc/init.d/hostapd restart
echo .
echo WLAN-Passwort:
cat /etc/hostapd/hostapd.conf | grep passphrase
